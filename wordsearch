

#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int main (){

   int i, j, row, column, howManyGrids;
   FILE *cf;
   cf = fopen("dictionary.txt", "r");
   char line[16];
   // hard coded until I figure out how to typecast char to int
   char *lines[149256];
   char *eof;
   char wordTest[row+1];

   //scanf("%i", &howManyGrids);
   scanf("%i", &row);
   scanf("%i", &column);

   char *userInput;
   char **grid = malloc(row);

   for(i=0; i<row; i++){
       userInput = malloc (column);
       grid[i] = malloc (column);
       scanf("%8s", userInput);
       memcpy(grid[i], userInput, column);
       free(userInput);
   }

   i=0;
   while((eof = fgets(line, 16, cf)) != NULL){
       lines[i] = strdup(eof);
      // printf("%s", lines[i]);
       i++;
   }

   for(i=0; i<row; i++){
      // creates string to later check, hard coded to test
       wordTest [i] =  grid[0][i];
   }

   //type caster from char to int, but it isnt working..
   //int tester = lines[0] - '0';
   //printf("%i", testet);

   int test;
   for(i=0; i<149256; i++){
      // checks to see if word created in on file
       test = strcmp(lines[i], wordTest);
       if (test == 0){
           printf("FOUND IT! %i \n", i);
       }
   }
   printf("%s", wordTest);

   return 0;
}
